<h1>Your Information</h1>


<%= form_tag("/invoice", method: "post") do %>
  <p><%= label_tag(:fname, "First Name:") %>
  <%= text_field_tag(:fname) %></p>
  <p><%= label_tag(:lname, "Last Name:") %>
  <%= text_field_tag(:lname) %></p>
  <p><%= label_tag(:address, "Address:") %>
  <%= text_field_tag(:address) %></p>
  <p><%= label_tag(:postal, "Postal Code:") %>
  <%= text_field_tag(:postal) %></p>
  <p><%= label_tag(:city, "City:") %>
  <%= text_field_tag(:city) %></p>
  <p><%= label_tag(:prov, "Province:") %>
  <%= text_field_tag(:prov) %></p>
  <p><%= label_tag(:country, "Country:") %>
  <%= text_field_tag(:country) %></p>
  <p><%= label_tag(:email, "Email:") %>
  <%= text_field_tag(:email) %></p>
  
  <%= submit_tag("Submit") %>
<% end %>



